<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %> 
<body>
  <%- include('../partials/header') %> 
  <main class="container my-3">
    <div class="table-responsive">
      <table class="table table-dark table-hover">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Nombre</th>
            <th scope="col">Apellido</th>
            <th scope="col">Email</th>
            <th scope="col">Categoria</th>
            <th scope="col">#</th>
          </tr>
        </thead>
        <tbody>
          <% result.forEach(users=>{ %> 
            <tr>
              <th scope="row"><%= users.id %></th>
              <td><%= users.name %></td>
              <td><%= users.apellido %></td>
              <td><%= users.email %></td>
              <td>
                <form action="/admin/edit/<%= users.id %>?_method=PUT" method="POST" class="d-flex">
                  <input type="text" value="<%= users.category %>" name="category" class="user-category">
                  <button type="submit" class="btn btn-success mx-3"><i class="fas fa-check-circle"></i></button>
                </form>
              </td>
              <td>
                <form action="/admin/delete/<%= users.id %>?_method=DELETE" method="POST">
                  <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>
                </form>
              </td>
            </tr>
            <% }) %> 
          </tbody>
        </table>
      </div>
    </main>
    <%- include('../partials/footer') %>
    <%- include('../partials/scripts') %> 
  </body>
  </html>