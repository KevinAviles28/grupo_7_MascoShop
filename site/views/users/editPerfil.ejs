<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %> 
<body>
  <%- include('../partials/header') %>
  
  <main class="container">
    <h1 class="my-3 text-white bg-dark border-bottom border-warning">Editar Perfil</h1>
    
    <div class="container-fluid">
      <!-- previsualizacion -->
      <div id="previsualizacion">
        <img src="/images/users/<%=result.avatar %>" alt="" id="imagenActual" class="imagen-perfil">
      </div>
      <!--  -->
      <form action="/users/elcambioDeImagen/<%=result.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
        <div class="row">
          <div class="col-md-6 mt-3">
            <input type="file" id="nuevaImagen" name="avatar" class="form-control">
            <button class="btn btn-primary my-3" type="submit">Cambiar Imagen</button>
          </div>
        </div>
      </form>
    </div>
    
    <form action="/users/edit/<%= userNew.id %>?_method=PUT " method="POST">
      <div class="container-fluid">
        <div class="row">
          <!--  -->
          <div class="col-md-6 col-lg-6">
            <div class="mb-3">
              <select class="form-select" id="prov" name="provincia">
                <% if(result.provincia == null){ %>
                  <option selected>Provincia</option>
                  <% }else{ %>
                    <option selected><%= result.provincia %></option>
                    <% } %>
                  </select>
                </div>
              </div>
              <!--  -->
              <div class="col-md-6 col-lg-6">
                <div class="mb-3">
                  <select class="form-select" id="localidad" name="localidad">
                    <% if(result.localidad == null){ %>
                      <option selected>Localidad</option>
                      <% }else{ %>
                        <option selected><%= result.localidad %></option>
                        <% } %>   
                      </select>
                    </div>
                  </div>
                  <!--  -->
                  <div class="col-md-6 col-lg-6">
                    <div class="mb-3">
                      <input type="text"class="form-control" placeholder="Direccion" name="direccion" value="<%= result.direccion %>">
                      <!-- <label>Direccion</label> -->
                    </div>
                  </div>
                  <div class="col-md-6 col-lg-6">
                    <div class="mb-3">
                      <input type="text"class="form-control" placeholder="Telefono" name="telefono" value="<%= result.telefono %>">
                      <!-- <label>Telefono</label> -->
                    </div>
                  </div>
                </div>
              </div>
              <!-- d-grid gap-2 -->
              <div class="d-flex justify-content-between my-3 mx-3">
                <button class="btn btn-success" type="submit">Guardar cambios</button>
                <a href="/users/perfil/<%=result.id%> " class="btn btn-danger">Cancelar</a> 
              </div>
              
            </form>
          </main>
          
          <%- include('../partials/footer') %>
          <%- include('../partials/scripts') %>
          <script src="/javascripts/cambiarElAvatar.js"></script>
          <script src="/javascripts/apiProvincias.js"></script> 
          
        </body>
        </html>