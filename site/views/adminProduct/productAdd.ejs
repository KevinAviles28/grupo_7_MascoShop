<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %> 
<body>
    <%- include('../partials/header') %> 
    <main class="carga-productos container my-5">
        <h2 class="py-3">Formulario carga de productos</h2>
        <form action="/products/productAdd" method="POST" enctype="multipart/form-data"><!-- viaja a allProducts.ejs -->
            <div class="row">
                <div class="col-12 col-md-6">
                    <select name="category" class="form-select mb-3">
                        <option selected>Categoria</option>
                        <% categoria.forEach(cate => { %>
                            <option value="<%= cate.id %> "><%= cate.name %> </option> 
                            <% }) %>
                        </select>
                        <span class="text-danger"><%= (typeof errores != 'undefined' && errores.category) ? errores.category.msg : "" %>  </span>
                    </div>
                    
                    <div class="col-12 col-md-6">
                        <select name="subcategory" class="form-select mb-3">
                            <option selected>Sub-categoria</option>
                            <% subcategoria.forEach(suba => { %>
                                <option value="<%= suba.id %> "><%= suba.name %> </option> 
                                <% }) %>
                            </select>
                            <span class="text-danger"><%= (typeof errores != 'undefined' && errores.subcategory) ? errores.subcategory.msg : "" %></span>
                        </div>

                        <div class="mb-3 col-12 col-md-3">
                            <input id="nombre" type="text" class="form-control" name="name" placeholder="Nombre del producto">
                            <span id="nombreErrors" class="text-danger"><%= (typeof errores != 'undefined' && errores.name) ? errores.name.msg : "" %></span>
                        </div>
                        <div class="mb-3 col-12 col-md-3">
                            <input id="ps" type="number"
                            class="form-control" name="precio" placeholder="Precio">
                            <span id="precioErrors" class="text-danger"><%= (typeof errores != 'undefined' && errores.precio) ? errores.precio.msg : "" %></span>
                        </div>
                        <div class="mb-3 col-12 col-md-3">
                            <input id="stock" type="number" class="form-control" name="stock" placeholder="Stock disponible">
                            <span id="stockErrors" class="text-danger"><%= (typeof errores != 'undefined' && errores.stock) ? errores.stock.msg : "" %></span>
                        </div>
                        <div class="mb-3 col-12 col-md-3">
                            <input id="desc" type="number" class="form-control" name="discount" placeholder="Descuento">
                            <span id="descErrors" class="text-danger"><%= (typeof errores != 'undefined' && errores.discount) ? errores.discount.msg : "" %></span>
                        </div>
                        <div class="mb-3">
                            <textarea id="descr" name="description" placeholder="Descripcion"  class="form-control"></textarea>
                            <span id="descrErrors" class="text-danger"><%= (typeof errores != 'undefined' && errores.description) ? errores.description.msg : "" %></span>
                        </div>
                        <div class="mb-3">
                            
                            <label for="" class="form-label" style="color: white;">Cargar imagen</label>
                            <input id="img" type="file" class="form-control" id="file" name="img">
                            <span id="imgErrors" class="text-danger"><%= (typeof errores != 'undefined' && errores.img) ? errores.img.msg : "" %></span>
                            
                        </div>
                        <div class="img-container mb-3" id="img-preview"></div>                
                        
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="reset" class="btn btn-danger mb-3">Cancelar</button>
                            <button type="submit" class="btn btn-primary mb-3">Confirmar carga</button>
                        </div>
                    </div>
                </form>
                
            </main>
            <%- include('../partials/footer') %> 
            <%- include('../partials/scripts') %> 
        </body>
        </html>